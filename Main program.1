	        for (int k = 0; k < n; ++k) {
	            int idx = index[k];
	            cout << items[idx].item_number << setw(25) << items[idx].name << setw(20) << items[idx].category << setw(20) << items[idx].qty << setw(20) << items[idx].price << setw(20) << items[idx].total << endl;
	        }
	
	        delete[] items;
	    }
	    
